rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas de desarrollo: permite leer y escribir a cualquier usuario autenticado.
    // Esto es permisivo y debe ser restringido antes de pasar a producci√≥n.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
