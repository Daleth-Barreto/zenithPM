
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check project membership
    function isProjectMember(projectId) {
      return request.auth.uid in get(/databases/$(database)/documents/projects/$(projectId)).data.teamIds;
    }

    // Rules for projects collection
    match /projects/{projectId} {
      allow read: if isProjectMember(projectId);
      allow create: if request.auth != null;
      allow update, delete: if isProjectMember(projectId);

      // Rules for tasks subcollection
      match /tasks/{taskId} {
        allow read, write: if isProjectMember(projectId);
      }
    }

    // Rules for teams collection
    match /teams/{teamId} {
      allow read, write: if request.auth.uid in resource.data.memberIds;
      allow create: if request.auth != null;
    }
  }
}
